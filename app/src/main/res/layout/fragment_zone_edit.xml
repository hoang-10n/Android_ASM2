<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    tools:context=".fragment.ZoneEditFrag">

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/adapter_border"
        app:layout_constraintBottom_toTopOf="@+id/zone_edit_frag_error_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zone_edit_frag_leader_txt">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/zone_edit_frag_created_tag_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created date:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/zone_edit_frag_created_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="CREATED"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/zone_edit_frag_closed_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration end:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/zone_edit_frag_closed_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/adapter_border"
                android:ems="10"
                android:focusable="false"
                android:hint="Closed date"
                android:inputType="text"
                android:longClickable="false"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/zone_edit_frag_start_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event start date:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/zone_edit_frag_start_date_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/adapter_border"
                android:ems="10"
                android:focusable="false"
                android:hint="Start date"
                android:inputType="text"
                android:longClickable="false"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/zone_edit_frag_start_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event start time:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/zone_edit_frag_start_time_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/adapter_border"
                android:ems="10"
                android:focusable="false"
                android:hint="Start time"
                android:inputType="text"
                android:longClickable="false"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/zone_edit_frag_duration_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event duration:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/zone_edit_frag_duration_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/adapter_border"
                android:ems="10"
                android:hint="Duration (hours)"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/zone_edit_frag_quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max quantity"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/zone_edit_frag_quantity_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/adapter_border"
                android:ems="10"
                android:hint="Max no. of volunteers"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/edit_frag_location_select_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick location"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/purple_700" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zone_edit_frag_latitude_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="Latitude"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/zone_edit_frag_longitude_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="Logitude"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/zone_edit_frag_description_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event description:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/zone_edit_frag_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/adapter_border"
                android:ellipsize="none"
                android:ems="10"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="10"
                android:text="This is a very long test just to test if this input works well or not. Maybe I'll surpase the 5 lines limit to see how it works, too. I think it work well"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/zone_edit_frag_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Name of the zone"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zone_edit_frag_save_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save changes"
        android:textColor="@color/white"
        app:backgroundTint="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zone_edit_frag_restore_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/zone_edit_frag_restore_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restore Data"
        android:textColor="@color/white"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zone_edit_frag_save_btn" />

    <TextView
        android:id="@+id/zone_edit_frag_leader_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEADER"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zone_edit_frag_name_input" />

    <ImageButton
        android:id="@+id/zone_edit_frag_back_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back to zone info"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/zone_edit_frag_error_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter all fields"
        android:textColor="@color/design_default_color_error"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/zone_edit_frag_restore_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>