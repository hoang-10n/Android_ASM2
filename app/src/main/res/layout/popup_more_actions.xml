<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="right"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/more_actions_popup_close_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="Close"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@color/black" />

    <Button
        android:id="@+id/more_actions_popup_edit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Edit this zone"
        android:textColor="@color/white"
        app:backgroundTint="@color/purple_700" />

    <Button
        android:id="@+id/more_actions_popup_end_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="End this zone"
        android:textColor="@color/white"
        android:visibility="gone"
        app:backgroundTint="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/more_actions_popup_report_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="View report"
        android:textColor="@color/white"
        android:visibility="gone"
        app:backgroundTint="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/more_actions_popup_volunteer_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="View volunteer list"
        android:textColor="@color/white"
        app:backgroundTint="@android:color/holo_purple" />

</LinearLayout>